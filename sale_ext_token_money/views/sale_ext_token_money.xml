<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record model="ir.actions.act_window" id="sale_ext_token_money.action_token_money">
      <field name="name">Token Money</field>
      <field name="res_model">token.money</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="sale_ext_token_money.action_wo_token_money">
      <field name="name">Without Token money</field>
      <field name="res_model">wo.token.money</field>
      <field name="view_mode">tree,form</field>
    </record>


    <record model="ir.ui.view" id="sale_ext_token_money.list_token_money">
      <field name="name">sale_ext_token_money list_token_money</field>
      <field name="model">token.money</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="so_ref"/>
          <field name="price_subtotal" sum='1'/>
          <field name="ttl_tok_money" sum='1'/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="sale_ext_token_money.list_wo_token_money">
      <field name="name">sale_ext_token_money list_wo_token_money</field>
      <field name="model">wo.token.money</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="so_ref"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="sale_ext_token_money.form">
      <field name="name">sale_ext_token_money form</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@name='options']" position="inside">
          <div>
              <field name="token_check"/>
              <label for="token_check"/>
          </div>
        </xpath>
        <xpath expr="//div[@name='options']" position="after">
          <group name="additioal_fields">
              <field name="token_money" attrs="{'invisible': [('token_check', '==', False)]}"/>
          </group>
        </xpath>
      </field>
    </record>

    <menuitem
      id= "menu_token_money"
      parent= "sales_team.menu_sales"
      sequence= "17"
      name= "Token Money"
      action= "sale_ext_token_money.action_token_money"
    />

    <menuitem
      id= "menu_without_token_money"
      parent= "sales_team.menu_sales"
      sequence= "18"
      name= "Without Token Money"
      action= "sale_ext_token_money.action_wo_token_money"
    />

  </data>
</odoo>